Simias.MdbSync.dll: $(MdbSync_CSFILES) $(MdbSync_RESOURCES)
	$(CSC) /out:$@ $(CSCFLAGS) $(MdbSync_FLAGS) $(MdbSync_LIBPATH:%=/lib:%) $(MdbSync_LIBS:%=/r:%) $(MdbSync_RESOURCES:%=$(ICON_FLAG)%) $(MdbSync_CSFILES_CSC) $(DOC_FILE_CMD)
	
all: $(SERVER_ASSEMBLIES) 

if DEBUG
if WINDOWS
DEBUG_CHECK_FILES = Simias.MdbSync.pdb
endif
endif

install-exec-local: all
	$(INSTALL_PROGRAM) $(SERVER_ASSEMBLIES) $(DEBUG_CHECK_FILES) $(DESTDIR)$(webbindir)
	$(INSTALL_PROGRAM) Simias.MdbSync.conf $(simiasdatadir)/modules

uninstall-local:
	cd $(DESTDIR)$(webbindir); rm -f $(SERVER_ASSEMBLIES) $(DEBUG_CHECK_FILES)
	cd $(simiasdatadir)/modules; rm -f Simias.MdbSync.conf

installcheck-local: install
		
.PHONY: test
test: installcheck

CLEAN_FILES = $(SERVER_ASSEMBLIES) $(DOC_FILE_CLEAN) 

clean-local:
	rm -rf $(CLEAN_FILES) $(COMMON_CLEAN_FILES)

