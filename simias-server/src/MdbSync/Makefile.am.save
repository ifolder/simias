# handle Mono secondary dependencies
export MONO_PATH := $(MONO_PATH):$(DESTDIR)$(libdir)

MdbSync_CSFILES = $(srcdir)/ThreadService.cs $(srcdir)/MdbSync.cs $(srcdir)/AssemblyInfo.cs $(srcdir)/DomainConfig.cs $(srcdir)/EnumUsers.cs $(srcdir)/Mdb.cs $(srcdir)/MdbUser.cs 
MdbSync_CSFILES_CSC := $(subst /,$(SEP),$(MdbSync_CSFILES))
MdbSync_INCLUDES =
MdbSync_RESOURCES =
MdbSync_FLAGS = $(CSC_LIBFLAG)
MdbSync_LIBPATH = $(DESTDIR)$(webbindir) ../../simias/src/SimiasLib.dll ../../simias/src/SimiasClient
MdbSync_LIBS = System.dll System.Data.dll $(SYSTEM_XML) System.Web.dll System.Web.Services.dll SimiasLib.dll SimiasClient.dll
#MdbSync_LIBPATH = ../../src/SimiasLib.dll ../../src/SimiasClient $(DESTDIR)$(webbindir)

EXTRA_DIST = Simias.MdbSync.conf 

if MAKE_DOC_FILE
DOC_FILE = $(basename $@).doc.xml
DOC_FILE_CMD = /doc:$(DOC_FILE)
DOC_FILE_CLEAN = *.doc.xml
endif

SERVER_ASSEMBLIES := Simias.MdbSync.dll

