%define prefix /opt/novell/ifolder3
%define APACHECONFD     /etc/apache2/conf.d

Summary      : iFolder 3 Web Client
Name         : @PACKAGE@
Version      : @VERSION@
Release      : 1
Copyright    : GPL
Group        : Applications/Productivity
Source       : %{name}-%{version}.tar.gz
URL          : http://forge.novell.com/modules/xfmod/project/?ifolder
#Distribution : 
Vendor       : Novell Inc. 
Packager     : <unknown>
BuildRoot    : %{_tmppath}/%{name}-%{version}

PreReq       : apache2 >= 2.0.54
Requires     : mono-core >= 1.1.13
Requires     : mono-data >= 1.1.13
Requires     : mono-web >= 1.1.13
Requires     : mod_mono >= 1.1.13

#=============================================================================
%Description
This package provides a Web Client for an iFolder Server.
#=============================================================================
%ChangeLog


#=============================================================================
%Prep
%setup -n %{name}-%{version}

#=============================================================================
%Build
./configure --prefix=%{prefix}
make

#=============================================================================
%Install
%{__rm} -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

#=============================================================================
%Clean
%{__rm} -rf $RPM_BUILD_ROOT

#=============================================================================
%Post
#INSTANCES_AFTER_INSTALL=$1
#if [ "$INSTANCES_AFTER_INSTALL" = "2" ]; then
#fi

#=============================================================================
#%Preun
#INSTANCES_AFTER_UNINSTALL=$1
#if [ "$INSTANCES_AFTER_UNINSTALL" = "0" ]; then
#fi

#=============================================================================
%Postun
INSTANCES_AFTER_UNINSTALL=$1
if [ "$INSTANCES_AFTER_UNINSTALL" = "0" ]; then
	if [ -e %{APACHECONFD}/ifolder_web_client.conf ]; then
		echo "Removing %{APACHECONFD}/ifolder_web_client.conf" 
		rm -f %{APACHECONFD}/ifolder_web_client.conf
	fi
fi



#=============================================================================
%Files
%defattr(755,root,root)
%dir %prefix
%{prefix}/*
%config(noreplace) %{prefix}/webclient/Web.config

