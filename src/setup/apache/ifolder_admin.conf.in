Include /etc/apache2/mod_mono.conf

Alias /admin "@admindir@"
AddMonoApplications ifolder "/ifolder:@admindir@"
<Location /ifolder >
	MonoSetServerAlias admin
	Order allow,deny
	Allow from all
	AddHandler mono asax aspx ascx asmx ashx
	DirectoryIndex Default.aspx index.html
</Location>

